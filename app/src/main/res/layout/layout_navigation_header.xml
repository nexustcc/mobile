<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_4"
    android:padding="20dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageNexusTcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_nexus_tcc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewSupporter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageNexusTcc"
        app:layout_constraintEnd_toEndOf="@id/imageNexusTcc"
        app:layout_constraintStart_toStartOf="@id/imageNexusTcc"
        app:layout_constraintTop_toTopOf="@id/imageNexusTcc">

    </View>

</androidx.constraintlayout.widget.ConstraintLayout>